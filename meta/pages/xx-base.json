{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "xxBase"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-xx-base",
                        "type": "navigate",
                        "then": []
                      }
                    ]
                  }
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "filterMode": "advanced",
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getBasesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "dbSinDarEla.getBases",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getBasesResult",
                            "type": "set",
                            "value": "${result.Value.AsODataEnumerable()}",
                            "valueType": "IEnumerable<SinDarElaVerwaltung.Models.DbSinDarEla.Base>"
                          },
                          {
                            "name": "getBasesCount",
                            "type": "set",
                            "value": "${result.Count}",
                            "valueType": "int"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load Bases",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "render": [
                      {
                        "condition": "grid0.Query.Filter != lastFilter",
                        "name": "master",
                        "type": "set",
                        "value": "grid0.View.FirstOrDefault()",
                        "valueType": "SinDarElaVerwaltung.Models.DbSinDarEla.Base"
                      },
                      {
                        "code": "await grid0.SelectRow(master)",
                        "condition": "grid0.Query.Filter != lastFilter",
                        "then": [],
                        "type": "execute"
                      },
                      {
                        "name": "lastFilter",
                        "type": "set",
                        "value": "grid0.Query.Filter",
                        "valueType": "string"
                      }
                    ],
                    "rowDoubleClick": [
                      {
                        "parameters": [
                          {
                            "name": "BaseID",
                            "value": "${event.Data.BaseID}"
                          }
                        ],
                        "path": "edit-xx-base",
                        "type": "navigate",
                        "then": [
                          {
                            "code": "${await grid0.Reload()}",
                            "type": "execute"
                          }
                        ]
                      }
                    ],
                    "rowSelect": [
                      {
                        "name": "master",
                        "type": "set",
                        "value": "${event}",
                        "valueType": "SinDarElaVerwaltung.Models.DbSinDarEla.Base"
                      },
                      {
                        "condition": "${event} == null",
                        "name": "BaseKontaktes",
                        "type": "set",
                        "value": "null",
                        "valueType": "IEnumerable<SinDarElaVerwaltung.Models.DbSinDarEla.BaseKontakte>"
                      },
                      {
                        "condition": "${event} != null",
                        "name": "dbSinDarEla.getBaseKontaktes",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "BaseID eq ${event.BaseID}"
                          }
                        ],
                        "then": [
                          {
                            "name": "BaseKontaktes",
                            "type": "set",
                            "value": "${result}.Value",
                            "valueType": "IEnumerable<SinDarElaVerwaltung.Models.DbSinDarEla.BaseKontakte>"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "BaseID",
                      "title": "Base ID"
                    },
                    {
                      "property": "AnredeID",
                      "sortProperty": "BaseAnreden.Anrede",
                      "groupProperty": "BaseAnreden.Anrede",
                      "filterProperty": "BaseAnreden.Anrede",
                      "template": "${data.BaseAnreden?.Anrede}",
                      "title": "Base Anreden"
                    },
                    {
                      "property": "Name1",
                      "title": "Name 1"
                    },
                    {
                      "property": "Name2",
                      "title": "Name 2"
                    },
                    {
                      "property": "NameKuerzel",
                      "title": "Name Kuerzel"
                    },
                    {
                      "property": "TitelVorne",
                      "title": "Titel Vorne"
                    },
                    {
                      "property": "TitelHinten",
                      "title": "Titel Hinten"
                    },
                    {
                      "property": "Strasse",
                      "title": "Strasse"
                    },
                    {
                      "property": "PLZ",
                      "title": "PLZ"
                    },
                    {
                      "property": "Ort",
                      "title": "Ort"
                    },
                    {
                      "property": "Geburtsdatum",
                      "formatString": "{0:d}",
                      "title": "Geburtsdatum"
                    },
                    {
                      "property": "Versicherungsnummer",
                      "title": "Versicherungsnummer"
                    },
                    {
                      "property": "Staatsangehoerigkeit",
                      "title": "Staatsangehoerigkeit"
                    },
                    {
                      "property": "Telefon1",
                      "title": "Telefon 1"
                    },
                    {
                      "property": "Telefon2",
                      "title": "Telefon 2"
                    },
                    {
                      "property": "EMail1",
                      "title": "E Mail 1"
                    },
                    {
                      "property": "EMail2",
                      "title": "E Mail 2"
                    },
                    {
                      "property": "Webseite",
                      "title": "Webseite"
                    },
                    {
                      "property": "BildURL",
                      "title": "Bild URL"
                    },
                    {
                      "property": "Notiz",
                      "title": "Notiz"
                    },
                    {
                      "property": "KontoName",
                      "title": "Konto Name"
                    },
                    {
                      "property": "KontoNummer",
                      "title": "Konto Nummer"
                    },
                    {
                      "property": "KontoInfo",
                      "title": "Konto Info"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Base",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "dbSinDarEla.deleteBase",
                                "parameters": [
                                  {
                                    "name": "BaseID",
                                    "value": "${data.BaseID}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null && result.StatusCode == System.Net.HttpStatusCode.NoContent",
                                    "type": "execute"
                                  },
                                  {
                                    "condition": "result != null && result.StatusCode != System.Net.HttpStatusCode.NoContent",
                                    "detail": "Unable to delete Base",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "count": "${getBasesCount}",
                  "itemType": "SinDarElaVerwaltung.Models.DbSinDarEla.Base"
                },
                {
                  "name": "heading1",
                  "size": "H1",
                  "text": "BaseKontaktes",
                  "type": "heading"
                },
                {
                  "icon": "add_circle_outline",
                  "name": "BaseKontakteAddButton",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-base-kontakte",
                        "type": "navigate",
                        "parameters": [
                          {
                            "name": "BaseID",
                            "type": "integer",
                            "value": "${master.BaseID}"
                          }
                        ]
                      }
                    ]
                  },
                  "disabled": "${this.master == null}"
                },
                {
                  "name": "grid1",
                  "data": "${BaseKontaktes}",
                  "columns": [
                    {
                      "property": "KontaktID",
                      "title": "Kontakt ID"
                    },
                    {
                      "property": "BaseID",
                      "sortProperty": "Base.Name1",
                      "groupProperty": "Base.Name1",
                      "filterProperty": "Base.Name1",
                      "template": "${data.Base?.Name1}",
                      "title": "Base"
                    },
                    {
                      "property": "NameKontakt",
                      "title": "Name Kontakt"
                    },
                    {
                      "property": "Handy",
                      "title": "Handy"
                    },
                    {
                      "property": "Telefon",
                      "title": "Telefon"
                    },
                    {
                      "property": "EMail",
                      "title": "E Mail"
                    },
                    {
                      "property": "Info",
                      "title": "Info"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "BaseKontakteDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Base",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "dbSinDarEla.deleteBaseKontakte",
                                "parameters": [
                                  {
                                    "name": "KontaktID",
                                    "value": "${data.KontaktID}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await Grid0RowSelect(master);",
                                    "type": "execute"
                                  },
                                  {
                                    "code": "await grid1.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "allowFiltering": true,
                  "allowPaging": true,
                  "allowSorting": true,
                  "events": {
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "KontaktID",
                            "value": "${event.KontaktID}"
                          }
                        ],
                        "path": "edit-base-kontakte",
                        "type": "navigate",
                        "then": []
                      }
                    ]
                  },
                  "itemType": "SinDarElaVerwaltung.Models.DbSinDarEla.BaseKontakte",
                  "filterMode": "advanced"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": []
  },
  "name": "xxBase",
  "access": "Authenticated",
  "layout": "Main"
}