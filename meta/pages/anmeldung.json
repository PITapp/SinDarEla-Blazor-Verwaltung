{
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "allowRegister": false,
                  "allowResetPassword": false,
                  "autoComplete": true,
                  "events": {
                    "login": [
                      {
                        "error": [
                          {
                            "detail": "Laden Benutzer fehlerhaft!",
                            "severity": "error",
                            "type": "notify"
                          }
                        ],
                        "name": "dbSinDarEla.getBenutzers",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "Benutzername eq '${event.Username}'"
                          },
                          {
                            "name": "$count",
                            "value": "true"
                          },
                          {
                            "name": "$expand",
                            "value": "Base"
                          }
                        ],
                        "then": [
                          {
                            "name": "intBenutzerAnzahl",
                            "type": "set",
                            "value": "${result.Count}",
                            "valueType": "int"
                          },
                          {
                            "condition": "intBenutzerAnzahl == 1",
                            "global": true,
                            "name": "globalBenutzer",
                            "type": "set",
                            "value": "${result.Value.AsODataEnumerable().FirstOrDefault()}",
                            "valueType": "SinDarElaVerwaltung.Models.DbSinDarEla.Benutzer"
                          },
                          {
                            "code": "await WriteLocalStorage(\"storageBenutzerIDCode\", ${Globals.globalBenutzer.BenutzerIDCode});",
                            "condition": "intBenutzerAnzahl == 1",
                            "type": "execute"
                          },
                          {
                            "condition": "${Globals.globalBenutzer.Kennwort} != GetDeterministicHashCode(${event.Password} + ${Globals.globalBenutzer.BaseID})",
                            "detail": "Benutzername oder Kennwort falsch!",
                            "severity": "error",
                            "type": "notify"
                          },
                          {
                            "condition": "${Globals.globalBenutzer.Kennwort} == GetDeterministicHashCode(${event.Password} + ${Globals.globalBenutzer.BaseID})",
                            "path": "dashboard",
                            "type": "navigate"
                          }
                        ],
                        "type": "invoke"
                      }
                    ],
                    "register": []
                  },
                  "loginText": "Anmelden",
                  "name": "login0",
                  "passwordRequired": "Passwort erfoderlich",
                  "passwordText": "Passwort",
                  "registerMessageText": "",
                  "registerText": "",
                  "resetPasswordText": "",
                  "type": "login",
                  "userRequired": "Benutzername erforderlich",
                  "userText": "Benutzername",
                  "visible": true
                }
              ],
              "name": "col0",
              "type": "col"
            }
          ],
          "name": "row0",
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": []
  },
  "layout": "Login",
  "name": "Anmeldung"
}