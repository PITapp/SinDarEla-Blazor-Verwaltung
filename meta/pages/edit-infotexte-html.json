{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Code",
                              "component": "Code",
                              "name": "CodeLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 20,
                              "type": "textbox",
                              "name": "Code",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${infotextehtml.Code}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CodeRequiredValidator",
                              "component": "Code",
                              "text": "Code is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Titel",
                              "component": "Titel",
                              "name": "TitelLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 100,
                              "type": "textbox",
                              "name": "Titel",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${infotextehtml.Titel}"
                            },
                            {
                              "type": "required-validator",
                              "name": "TitelRequiredValidator",
                              "component": "Titel",
                              "text": "Titel is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Inhalt",
                              "component": "Inhalt",
                              "name": "InhaltLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 4294967295,
                              "type": "textbox",
                              "name": "Inhalt",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${infotextehtml.Inhalt}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Sortierung",
                              "component": "Sortierung",
                              "name": "SortierungLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "int?",
                              "type": "numeric",
                              "name": "Sortierung",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${infotextehtml.Sortierung}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update InfotexteHtml",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "dbSinDarEla.updateInfotexteHtml",
                        "parameters": [
                          {
                            "name": "InfotextID",
                            "value": "${parameters.InfotextID}"
                          },
                          {
                            "name": "InfotexteHtml",
                            "value": "${infotextehtml}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${infotextehtml}",
                            "condition": ""
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "SinDarElaVerwaltung.Models.DbSinDarEla.InfotexteHtml",
                  "data": "${infotextehtml}",
                  "visible": "${infotextehtml != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "dbSinDarEla.getInfotexteHtmlByInfotextID",
        "parameters": [
          {
            "name": "InfotextID",
            "value": "${parameters.InfotextID}"
          }
        ],
        "then": [
          {
            "name": "infotextehtml",
            "type": "set",
            "value": "${result}",
            "valueType": "SinDarElaVerwaltung.Models.DbSinDarEla.InfotexteHtml"
          }
        ],
        "error": [],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Infotexte Html",
  "access": "Authenticated",
  "layout": "Main"
}