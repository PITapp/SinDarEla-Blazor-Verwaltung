{
  "access": "Everybody",
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "action": "@($\"account/login?redirectUrl={redirectUrl}\")",
                  "components": [
                    {
                      "allowRegister": false,
                      "allowResetPassword": false,
                      "attributes": [],
                      "autoComplete": false,
                      "events": {
                        "login": [],
                        "register": []
                      },
                      "loginText": "Anmelden",
                      "name": "login0",
                      "passwordRequired": "Passwort erforderlich",
                      "passwordText": "Passwort",
                      "registerMessageText": "",
                      "registerText": "",
                      "resetPasswordText": "",
                      "type": "login",
                      "userRequired": "Benutzername erforderlich",
                      "userText": "Benutzername"
                    }
                  ],
                  "data": "${\"login\"}",
                  "method": "post",
                  "name": "templateForm0",
                  "type": "template-form"
                }
              ],
              "type": "col"
            }
          ],
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "code": "var query = System.Web.HttpUtility.ParseQueryString(new Uri(UriHelper.ToAbsoluteUri(UriHelper.Uri).ToString()).Query);",
        "type": "execute"
      },
      {
        "code": "var error = query.Get(\"error\");",
        "type": "execute"
      },
      {
        "name": "redirectUrl",
        "type": "set",
        "value": "query.Get(\"redirectUrl\");"
      },
      {
        "condition": "!string.IsNullOrEmpty(error)",
        "detail": "${error}",
        "severity": "error",
        "summary": "Error",
        "type": "notify"
      }
    ]
  },
  "layout": "Login",
  "name": "Login"
}