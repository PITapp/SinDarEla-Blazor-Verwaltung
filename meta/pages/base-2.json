{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Base2"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-base-2",
                        "type": "navigate",
                        "then": []
                      }
                    ]
                  }
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "filterMode": "advanced",
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getBasesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "dbSinDarEla.getBases",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": "${event.filter}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          }
                        ],
                        "then": [
                          {
                            "name": "getBasesResult",
                            "type": "set",
                            "value": "${result.Value.AsODataEnumerable()}",
                            "valueType": "IEnumerable<SinDarElaVerwaltung.Models.DbSinDarEla.Base>"
                          },
                          {
                            "name": "getBasesCount",
                            "type": "set",
                            "value": "${result.Count}",
                            "valueType": "int"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load Bases",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "rowSelect": [
                      {
                        "parameters": [
                          {
                            "name": "BaseID",
                            "value": "${event.BaseID}"
                          }
                        ],
                        "path": "edit-base-2",
                        "type": "navigate",
                        "then": []
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "Name1",
                      "title": "Name 1"
                    },
                    {
                      "property": "Name2",
                      "title": "Name 2"
                    },
                    {
                      "property": "NameKuerzel",
                      "title": "Name Kuerzel"
                    },
                    {
                      "property": "TitelVorne",
                      "title": "Titel Vorne"
                    },
                    {
                      "property": "TitelHinten",
                      "title": "Titel Hinten"
                    },
                    {
                      "property": "Strasse",
                      "title": "Strasse"
                    },
                    {
                      "property": "PLZ",
                      "title": "PLZ"
                    },
                    {
                      "property": "Ort",
                      "title": "Ort"
                    },
                    {
                      "property": "Geburtsdatum",
                      "formatString": "{0:d}",
                      "title": "Geburtsdatum"
                    },
                    {
                      "property": "Versicherungsnummer",
                      "title": "Versicherungsnummer"
                    },
                    {
                      "property": "Staatsangehoerigkeit",
                      "title": "Staatsangehoerigkeit"
                    },
                    {
                      "property": "Telefon1",
                      "title": "Telefon 1"
                    },
                    {
                      "property": "Telefon2",
                      "title": "Telefon 2"
                    },
                    {
                      "property": "EMail1",
                      "title": "E Mail 1"
                    },
                    {
                      "property": "EMail2",
                      "title": "E Mail 2"
                    },
                    {
                      "property": "Webseite",
                      "title": "Webseite"
                    },
                    {
                      "property": "BildURL",
                      "title": "Bild URL"
                    },
                    {
                      "property": "Notiz",
                      "title": "Notiz"
                    },
                    {
                      "property": "KontoName",
                      "title": "Konto Name"
                    },
                    {
                      "property": "KontoNummer",
                      "title": "Konto Nummer"
                    },
                    {
                      "property": "KontoInfo",
                      "title": "Konto Info"
                    },
                    {
                      "property": "Notfallkontakt",
                      "title": "Notfallkontakt"
                    },
                    {
                      "property": "NotfallkontaktTelefon",
                      "title": "Notfallkontakt Telefon"
                    },
                    {
                      "property": "InfoMitarbeiter",
                      "title": "Info Mitarbeiter"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Base",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "dbSinDarEla.deleteBase",
                                "parameters": [
                                  {
                                    "name": "BaseID",
                                    "value": "${data.BaseID}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null && result.StatusCode == System.Net.HttpStatusCode.NoContent",
                                    "type": "execute"
                                  },
                                  {
                                    "condition": "result != null && result.StatusCode != System.Net.HttpStatusCode.NoContent",
                                    "detail": "Unable to delete Base",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "count": "${getBasesCount}",
                  "itemType": "SinDarElaVerwaltung.Models.DbSinDarEla.Base"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": []
  },
  "name": "Base2",
  "layout": "Main"
}