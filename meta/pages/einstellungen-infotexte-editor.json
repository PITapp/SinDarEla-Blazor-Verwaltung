{
  "access": [
    "Authenticated"
  ],
  "components": [
    {
      "components": [
        {
          "components": [
            {
              "class": "col-md-12",
              "components": [
                {
                  "attributes": [],
                  "components": [],
                  "footerTemplate": "",
                  "headerTemplate": [
                    {
                      "components": [
                        {
                          "class": "col-md-12 align-items-start d-flex",
                          "components": [
                            {
                              "buttonStyle": "light",
                              "events": {
                                "click": []
                              },
                              "icon": "content_copy",
                              "name": "buttonKopieren",
                              "size": "sm",
                              "style": {
                                "color": "#D86E13",
                                "display": "block",
                                "float": "none"
                              },
                              "text": "Kopieren",
                              "tooltip": "",
                              "type": "button"
                            }
                          ],
                          "name": "col1",
                          "type": "col"
                        }
                      ],
                      "name": "row0",
                      "type": "row"
                    }
                  ],
                  "name": "panel0",
                  "style": {
                    "border": "1px solid #e6ecef",
                    "height": "740px"
                  },
                  "text": "${dsoInfotexteHTML.Titel}",
                  "type": "panel"
                }
              ],
              "name": "col1",
              "type": "col"
            }
          ],
          "name": "row1",
          "type": "row"
        },
        {
          "components": [
            {
              "class": "col offset-sm-3 justify-content-end d-flex",
              "components": [
                {
                  "buttonStyle": "success",
                  "buttonType": "button",
                  "events": {
                    "click": [
                      {
                        "error": [
                          {
                            "detail": "Infotext konnte nicht gespeichert werden!",
                            "severity": "error",
                            "summary": "",
                            "type": "notify"
                          }
                        ],
                        "name": "dbSinDarEla.updateInfotexteHtml",
                        "parameters": [
                          {
                            "name": "InfotextID",
                            "value": "${parameters.InfotextID}"
                          },
                          {
                            "name": "InfotexteHtml",
                            "value": "${dsoInfotexteHTML}"
                          }
                        ],
                        "then": [
                          {
                            "detail": "Infotext gespeichert",
                            "severity": "success",
                            "type": "notify"
                          },
                          {
                            "result": "${result}",
                            "type": "close-popup"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "icon": "done",
                  "name": "button0",
                  "text": "Speichern",
                  "type": "button"
                },
                {
                  "buttonStyle": "light",
                  "events": {
                    "click": [
                      {
                        "condition": "this.bolEditorAenderungen == false",
                        "type": "back"
                      },
                      {
                        "condition": "this.bolEditorAenderungen == true",
                        "parameters": [
                          {
                            "name": "strMeldung",
                            "value": "\"Der Text wurde geändert! Soll die Bearbeitung wirklich abgebrochen werden?\""
                          }
                        ],
                        "path": "meldung-ja-nein",
                        "then": [
                          {
                            "condition": "${result} == \"Ja\"",
                            "type": "back"
                          }
                        ],
                        "title": "Text geändert",
                        "type": "popup",
                        "width": 720
                      }
                    ]
                  },
                  "name": "button1",
                  "style": {
                    "marginLeft": "1rem"
                  },
                  "text": "Abbruch",
                  "type": "button"
                }
              ],
              "name": "col0",
              "style": {},
              "type": "col"
            }
          ],
          "name": "row0",
          "style": {
            "paddingTop": "15px"
          },
          "type": "row"
        }
      ],
      "container": "main",
      "type": "content"
    }
  ],
  "events": {
    "load": [
      {
        "name": "bolEditorAenderungen",
        "type": "set",
        "value": "false",
        "valueType": "bool"
      },
      {
        "error": [],
        "name": "dbSinDarEla.getInfotexteHtmlByInfotextID",
        "parameters": [
          {
            "name": "InfotextID",
            "value": "${parameters.InfotextID}"
          }
        ],
        "then": [
          {
            "name": "dsoInfotexteHTML",
            "type": "set",
            "value": "${result}",
            "valueType": "SinDarElaVerwaltung.Models.DbSinDarEla.InfotexteHtml"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "layout": "Main",
  "name": "EinstellungenInfotexteEditor"
}