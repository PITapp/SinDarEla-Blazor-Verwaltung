@inherits SinDarElaVerwaltung.Layouts.MainLayoutComponent

@using Radzen
@using Radzen.Blazor
@using SinDarElaVerwaltung.Models.DbSinDarEla
@using SinDarElaVerwaltung.Pages
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
  <ChildContent>
    <RadzenHeader>
      <ChildContent>
        <div class="row justify-content-start align-items-center">
          <div class="col-6 d-flex align-items-center" style="padding-left: 25px">
            <RadzenSidebarToggle Click="@SidebarToggle0Click" style="font-size: 1.5rem;">
            </RadzenSidebarToggle>
            <RadzenImage Path="assets/images/LogoMitSchriftzug4.png" style="float: left; height: 34px">
            </RadzenImage>
            <RadzenLabel style="color: #E8E8E8; float: none; font-size: 12px; padding-left: 10px; padding-right: 10px" Text="|">
            </RadzenLabel>
            <RadzenLabel style="color: #E8E8E8; float: none; font-family: verdana,geneva,sans-serif; font-size: 12px; font-weight: normal" Text="SinDarEla">
            </RadzenLabel>
          </div>
          <div class="col-6 justify-content-end d-flex">
            <RadzenProfileMenu style="display: block" Visible="@(Globals.globalBenutzer != null)">
              <ChildContent>
                <RadzenProfileMenuItem Icon="account_circle" Path="benutzerprofil" Text="Benutzerprofil">
                </RadzenProfileMenuItem>
                <RadzenProfileMenuItem Icon="power_settings_new" Path="abmeldung" Text="Logout">
                </RadzenProfileMenuItem>
              </ChildContent>
              <Template>
                <div class="col-md-12  d-flex justify-content-end" style="background-color: rgba(0, 0, 0, 0)">
                  <RadzenLabel style="color: #f5f5f5; display: inline-block; font-family: verdana,geneva,sans-serif; font-size: 12px; font-weight: normal; margin-right: 20px; padding-top: 7px; vertical-align: bottom" Text="@($"{(Globals.globalBenutzer.Benutzername)}")">
                  </RadzenLabel>
                  <RadzenImage Path="@(Globals.globalBenutzer.Base.BildURL)" style="border-radius: 50%; display: block; float: none; height: 32px; width: 32px">
                  </RadzenImage>
                </div>
              </Template>
            </RadzenProfileMenu>
          </div>
        </div>
      </ChildContent>
    </RadzenHeader>
    <RadzenBody @ref="body0">
      <ChildContent>
        <RadzenContentContainer Name="main">
        @Body
        </RadzenContentContainer>
      </ChildContent>
    </RadzenBody>
    <RadzenFooter style="height: 50px; padding-top: 10px">
      <ChildContent>
        <RadzenLabel style="color: #6d787d; float: none; padding-top: 2px" Text="© 2022 Soziale-Dienste-Ennstal">
        </RadzenLabel>
        <RadzenLabel style="color: #e5ecef; float: none; padding-left: 10px; padding-right: 10px" Text="|">
        </RadzenLabel>
        <RadzenLabel style="color: #6d787d; float: none; padding-top: 2px" Text="Irdning · Hauptplatz 20">
        </RadzenLabel>
        <RadzenLink Path="versionen" style="float: right" Text="Version 3.024">
        </RadzenLink>
        <RadzenLabel style="color: #e5ecef; float: right; padding-left: 10px; padding-right: 10px" Text="|">
        </RadzenLabel>
        <RadzenLink Path="kontakt" style="float: right" Text="Kontakt">
        </RadzenLink>
        <RadzenLabel style="color: #e5ecef; float: right; padding-left: 10px; padding-right: 10px" Text="|">
        </RadzenLabel>
        <RadzenLink Path="handbuch" style="float: right" Text="Handbuch">
        </RadzenLink>
        <RadzenLabel style="color: #e5ecef; float: right; padding-left: 10px; padding-right: 10px" Text="|">
        </RadzenLabel>
        <RadzenLink Path="feedback" style="float: right" Text="Feedback">
        </RadzenLink>
      </ChildContent>
    </RadzenFooter>
    <RadzenSidebar @ref="sidebar0" style="width: 191px">
      <ChildContent>
        <RadzenPanelMenu style="height: 100%; width: 190px">
          <ChildContent>
            <RadzenPanelMenuItem Icon="dashboard" Path="dashboard" Selected="true" Text="Dashboard">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="assignment_turned_in" Path="mitarbeiter-taetigkeiten" Selected="false" Text="Management">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="assignment" Text="Dienstplan">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="assignment_ind" Path="mitarbeiter" Text="Mitarbeiter">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="face" Text="Kunden">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="contact_phone" Text="Kontakte">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="create_new_folder" Text="Dokumente">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="assessment" Text="Auswertungen">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="euro_symbol" Text="Abrechnung">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="supervisor_account" Text="Benutzer">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="face" Path="benutzerprofil" Text="Benutzerprofil">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="settings" Path="einstellungen" Text="Einstellungen">
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenu>
      </ChildContent>
    </RadzenSidebar>
  </ChildContent>
</RadzenLayout>
